// 首先引入颜色变量以及字体变量
@import './variable.styl'

body, html
  line-height 1
  font-family 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', Arial, sans-serif, 'Droid Sans Fallback'
  user-select none
  -webkit-tap-highlight-color transparent
  background $color-background
  color $color-text-d
  width 100%
  height 100%

.clearfix:before
  content ' '
  display table
  overflow hidden

.clearfix:after
  content ' '
  display table
  overflow hidden
  clear both

.clearfix
  zoom 1