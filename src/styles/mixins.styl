ellipsis()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

mul-ellipsis($lines)
  overflow hidden
  display -webkit-box
  word-break break-word
  -webkit-box-orient vertical
  -webkit-line-clamp $lines
  text-overflow ellipsis
  -o-text-overflow ellipsis

flex-row($justifyType)
  display flex
  flex-flow row nowrap
  align-items center
  justify-content $justifyType

flex-col-center()
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center

flex-col($justifyType)
  display flex
  flex-flow column nowrap
  align-items center
  justify-content $justifyType